{
	"compilerOptions": {
		// "outDir": "./dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		// "typeRoots": [
		// 	"./typings" // path to your typings directory (relative to tsconfig.json)
		// ],
		"sourceMap": false,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noImplicitAny": false,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"strictPropertyInitialization": false,
		"declaration": true
	},
	"include": ["src"]
	// "exclude": [
	// 	"node_modules",
	// 	"lib",
	// 	"scripts",
	// 	"acceptance-tests",
	// 	"webpack",
	// 	"jest"
	// ]
}
